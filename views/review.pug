extends base

block content
    if(tourC)
        main.main.w3-hide-small(style=`padding-top:7%;padding-left:5%;padding-right:5%;padding-bottom:5%;background-image: url('/img/tours/${cover}');background-size: 100%`)
            .login-form.w3-margin-bottom.w3-border.w3-margin-top.w3-border-green(style='border-radius:3%;margin-bottom:0px;')
                h2.heading-secondary.ma-bt-lg #{name} Review
                form.form.review-form
                    .form__group(style='width:100%')
                        label.form__label(for='review') Review 
                        textarea#review.form__input(type='text'  placeholder=`${review}` || 'your review here', required)
                    .form__group.ma-bt-md
                        label.form__label(for='rating') Rating
                        select.w3-select.form__input(name='rating'  id='rating',style="width:20%")
                            option(value='1' ) 1
                            option(value='2') 2
                            option(value='3') 3
                            option(value='4') 4
                            option(value='5') 5
                    .form__group.w3-hide-small
                        input(type="hidden" id="user" value=`${user._id}`)
                        input(type="hidden" id="tour" value=`${id}`)
                        button.btn.btn--green Submit

        main.main.w3-hide-large.w3-hide-medium(style=`padding-top:7%;padding-left:5%;padding-right:5%;background-image: url('/img/tours/${cover}')`)
            .login-form.w3-margin-bottom.w3-border.w3-margin-top(style='border-radius:3%;margin-bottom:0px;padding:15%')
                h2.heading-secondary.ma-bt-lg #{name} Review
                form.form--review
                    .form__group(style='width:100%')
                        label.form__label(for='sreview') Review
                        textarea#sreview.form__input( placeholder=`${test}` || 'your review here',  required)
                    .form__group.ma-bt-md
                        label.form__label(for='srating') Rating
                        select.w3-select.form__input(name='srating' id='srating',style="width:30%")
                            option(value='1') 1
                            option(value='2') 2
                            option(value='3') 3
                            option(value='4') 4
                            option(value='5') 5
                    .form__group.w3-hide-large.w3-hide-medium.w3-center
                        input(type="hidden" id="suser" value=`${user._id}`)
                        input(type="hidden" id="stour" value=`${id}`)
                        button.btn.btn--green Submit  
    else
        main.main(style='padding:10%')
            .w3-container
            .error__title
                h2.heading-secondary.heading-secondary--error Uh oh! Something went wrong!   
                h2.error__emoji ðŸ˜¢ ðŸ¤¯
            .error__msg You did not booked this tour
    if (update)        
        input(type="hidden" id="up" value='update')
        input(type="hidden" id="reviewId" value=`${reviewId}`)