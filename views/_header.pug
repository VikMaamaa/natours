header.header
  nav.nav.nav.tours
    a.nav__el(href='/') All tours
  .header__logo   
    img(src='/img/logo-white.png' alt='Natours logo')
  nav.nav.nav--user
    if user
      a.nav__el.nav__el--logout.w3-hide-small Log out
      a.nav__el.w3-hide-small(href='/me')
          img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
          span= user.name.split(' ')[0]
    else
      a.nav__el.w3-hide-small(href='/login') Log in
      a.nav__el.nav__el--cta.w3-hide-small(href='/signup') Sign up    
.w3-card.header.w3-hide-large.w3-hide-medium(style='border:0px;z-index:0;')
  if user
      a.log2.nav__el.nav__el--logout.w3-col.w3-small.w3-margin-right.w3-button.w3-border.w3-round-xlarge.w3-hover-white Log out
      a.nav__el.w3-margin-bottom(href='/me')
          img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
          span= user.name.split(' ')[0]
  if(!user)
    a.w3-col.w3-small.w3-margin-right.w3-button.w3-border.w3-round-xlarge.w3-hover-white(href='/login') Log in
    a.w3-col.w3-small.w3-button.w3-border.w3-round-xlarge.w3-hover-white(href='/signup') Sign up